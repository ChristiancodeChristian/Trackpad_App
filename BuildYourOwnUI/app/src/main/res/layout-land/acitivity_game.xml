<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:screenOrientation="sensor"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1500dp"
        android:layout_height="750dp"
        android:layout_marginTop="300dp"
        android:background="#00451F04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:srcCompat="@drawable/soil" />

    <ImageButton
        android:id="@+id/btngame2main"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="false"
        android:backgroundTint="#00000000"
        android:padding="-0dp"
        android:scaleType="centerInside"
        android:src="@drawable/homeimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/homeimage" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="413dp"
        android:layout_height="413dp"
        app:layout_constraintEnd_toStartOf="@+id/btngame2main">

        <TableRow
            android:layout_width="388dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/Mole1"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />

            <ImageButton
                android:id="@+id/Mole2"
                android:layout_width="134dp"
                android:layout_height="135dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/Mole3"
                android:layout_width="138dp"
                android:layout_height="135dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/Mole4"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />

            <ImageButton
                android:id="@+id/Mole5"
                android:layout_width="103dp"
                android:layout_height="135dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />

            <ImageButton
                android:id="@+id/Mole6"
                android:layout_width="102dp"
                android:layout_height="135dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/Mole7"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />

            <ImageButton
                android:id="@+id/Mole8"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />

            <ImageButton
                android:id="@+id/Mole9"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/lustiger_maulwurf_im_garten_maulwurf_design_sticker" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textViewtime"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="00:00:000"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimer" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Time:"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Points:"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtime" />

    <TextView
        android:id="@+id/scorecount"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>

